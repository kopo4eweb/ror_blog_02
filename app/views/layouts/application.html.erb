<!DOCTYPE html>
<html>
  <head>
    <title>RorBlog02</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item <%= "active" if current_page?(posts_path) %>">
              <a class="nav-link" href="<%= posts_path %>">Статьи</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="№">Контаты</a>
            </li>
          </ul>
          <%= link_to 'Новая статья', new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>
        </div>
      </nav>
    </div>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
